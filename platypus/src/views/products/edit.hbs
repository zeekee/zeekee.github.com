<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Edite el producto</h3>
                </div>
                <div class="card-body">
                    <form action="/products/edit/{{product.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{product.name}}" class="form-control" name="name" placeholder="title" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{product.brand}}" name="brand" class="form-control" placeholder="Marca">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{product.quantity}}" name="quantity" class="form-control" placeholder="Cantidad">
                        </div>
                        <div class="form-group">
                           <input type="text" value="{{product.type}}" name="type" class="form-control" placeholder="Tipo">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>