<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Agregue un producto</h3>
                </div>
                <div class="card-body">
                    <form action="/products/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="name" class="form-control" placeholder="Nombre" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="brand" class="form-control" placeholder="Marca">
                        </div>
                        <div class="form-group">
                            <input type="text" name="quantity" class="form-control" placeholder="Cantidad" required>
                        </div>
                        <div class="form-group">
                           <input type="text" name="type" class="form-control" placeholder="Tipo">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>