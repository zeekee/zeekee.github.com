<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/providers/edit/{{provider.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{provider.name}}" name="name" class="form-control" placeholder="Nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="tel" value="{{provider.phone}}" name="phone" pattern="[0-9]{2}[0-9]{8}" class="form-control"
                                placeholder="Telefono">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{provider.address}}" name="adress" class="form-control" placeholder="Direccion">
                        </div>
                        <div class="form-group">
                            <textarea name="comments" class="form-control" rows="5"
                                placeholder="Comentarios">{{provider.comments}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>